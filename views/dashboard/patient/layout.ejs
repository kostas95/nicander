<body>
    <div id="navbar" class="navbar2">
        <div class="navbar-decoration"></div>
        <img src="/img/logo.png" id="logo">
        <ul>
            <a href="/dashboard">
                <li class="navbar-item"><i class="fas fa-home"></i></li>
            </a>
            <a href="/dashboard/personal-details">
                <li class="navbar-item">My personal details</li>
            </a>
            <a href="/dashboard/my-appointments">
                <li class="navbar-item">My appointments</li>
            </a>
            <a href="/dashboard/reviews">
                <li class="navbar-item">Reviews</li>
            </a>
            <a href="/dashboard/notifications">
                <li class="navbar-item">Notifications</li>
            </a>
            <li class="navbar-item email"><%= email %>
                <div class="container" id='dropdown'>
                    <a href="/logout" class="navbar-item">
                        Logout <i class="fas fa-sign-out-alt"> </i>
                    </a>
                    <!-- <a href="/doctor/login" class="navbar-item">Doctors</a> -->
                </div>
            </li>
        </ul>
        <div class="navbar-decoration"></div>
    </div>

    <%- body %>

</body>
