<style>
    #navbar>ul {
        width: 90%;
    }

    .navbar-decoration {
        width: 5%;
    }

    .fa-sign-out-alt {
        color: black;
    }

    #dropdown {
        top: 3rem;
    }

    i {
        font-family: roboto;
    }
