    #see-all-main-cont>* {
        width: 100%;
        max-height: 90vh;
        margin: 10px 10px !important;
    }

    #display-all-posts {
        justify-content: flex-start;
        align-self: start;
        overflow-y: auto;
        padding: 1rem 0;
    }

    .post-edit {
        align-items: flex-start !important;
        justify-content: flex-start;
        align-items: center;
        border: 1px solid rgb(226, 226, 226);
        border-radius: 5px;
        padding: 1rem;
        width: 100%;
        margin: 5px 0;
        cursor: pointer;
    }

    .post-author {
        position: initial;
    }

    .post-title {
        padding: 5px;
        font-size: 1rem;
    }

    .small {
        z-index: 10;
        padding: 5px;
        width: 50px;
        font-size: 10px;
        text-align: center;
    }
</style>
<script>
    //Prevent form from resubmitting when page refreshes
    if (window.history.replaceState) {
        window.history.replaceState(null, null, window.location.href);
    }

    let postsArr = [];
    //Fetch all posts
    fetch("/getposts", {
        method: "post",
        headers: {
            'Content-Type': 'application/json',
            'Accept': 'application/json'
        },

        //make sure to serialize your JSON body
        body: JSON.stringify({ 'post_num': 'all' })
    })
        .then(response => response.json())
        .then((posts) => {
            if (posts.length !== 0) {
                posts.forEach(post => {
                    // console.log(post)
                    postsArr.push(post)
                    createPostSection(post.title, post.content, post.author, post.timestamp, post._id)
                });
            }
            else {
                document.querySelector('#display-all-posts').innerText = 'No available posts yet'
            }
        });

